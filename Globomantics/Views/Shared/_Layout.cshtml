<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link asp-href-include="css/*" asp-href-exclude="css/all.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link asp-href-include="css/all.min.css" rel="stylesheet" />
    </environment>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <img asp-append-version="true" alt="Logo" src="~/img/Globo_logo.png" style="max-width:100%" />
            </div>
            <div class="col-md-10 titlecol">
                <span class="title">@ViewBag.Title</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>

    </div>
</body>
</html>